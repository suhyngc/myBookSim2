//bitwidth = 256; 
//64 banks to 64 PE arrays through 64 switches. 
//8X8 mesh with 1 flit per packet under injection mode
//injection rate here is packet per cycle, NOT flit per cycle

// Topology

topology = mesh;
k = 8;
n = 2;

// Routing
routing_function = dor;

// Flow control -- need to be determined by area constraint
num_vcs     = 4;
vc_buf_size = 2;
wait_for_tail_credit = 0;

// Router architecture -- okay with default
vc_allocator = islip;
sw_allocator = islip;
alloc_iters  = 1;

credit_delay   = 0;
routing_delay  = 0;
vc_alloc_delay = 1;
sw_alloc_delay = 1;

input_speedup     = 1;
output_speedup    = 1;
internal_speedup  = 1.0;


// Traffic
traffic = tornado;
packet_size = 1;
// viewer_trace = 1;
print_activity = 1;

// Simulation
sim_type = throughput;

injection_rate = 0.01;

